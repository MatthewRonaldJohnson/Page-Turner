<div class="container my-5">
    <div class="row h-25 my-5 p-2 border">

        <div class="col-12 col-md-3">
            <div>
                <div><img src="{{postData.cover_img_url}}" alt="{{postData.book_title}}"></div>
                {{#if postData.rating}}
                <span class="badge bg-success">👍 A Real Page Turner</span>
                {{else}}
                <span class="badge bg-danger">👎 Give it a Pass</span>
                {{/if}}
            </div>

        </div>
        <div class="d-flex flex-column justify-content-center align-items-center col-12 col-md-9">
            <h4>{{postData.title}}</h4>
            <p>
                {{postData.body}}
            </p>
            <p>- {{postData.userName}}</p>
        </div>

    </div>
    {{#each postData.commentArr}}
    {{> comments}}
    {{/each}}
</div>