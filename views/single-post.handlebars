<div class="container my-5">
    <div class="row h-25 my-5 p-2 border">

        <div class="col-12 col-md-3">
            <div>
                <div><img src="{{postData.cover_img_url}}" alt="{{postData.book_title}}"></div>
                {{#if postData.rating}}
                <span class="badge bg-success">üëç A Real Page Turner</span>
                {{else}}
                <span class="badge bg-danger">üëé Give it a Pass</span>
                {{/if}}
            </div>

        </div>
        <div class="d-flex flex-column justify-content-center align-items-center col-12 col-md-9">
            <h4>{{postData.title}}</h4>
            <p>
                {{postData.body}}
            </p>
            <p>- {{postData.userName}}</p>
        </div>
        {{#if own}}
        <button id="update" class="my-3 col-6 btn btn-dark">Update Post</button>
        <button id="delete" class="my-3 col-6 btn btn-danger">Delete Post</button>
        {{/if}}
    </div>
    {{#each postData.commentArr}}
    {{> comments}} 
    {{/each}}
    <div class= "row"><button id = "addComment" class= "btn btn-dark"> Add your own Comment</button> </div>
    <div class ="row">
     <form id = "newIdForm" hidden>
       <div class= "form-group">
           <label for= "comment">Comment</label>
           <input type= "text" id= "comment">
       </div> 
       <button type= "submit" class = "btn btn-dark">Submit</button>  
     </form>   
    </div>



</div>

<script src= "/js/comment.js"></script>
